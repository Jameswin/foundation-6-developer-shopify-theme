<!doctype html>
<html class="no-js" lang="en-US">
<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% if settings.favicon_enable %}
	<link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
	{% endif %}

	<title>{{ page_title }}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

	{% if page_description %}
	<meta name="description" content="{{ page_description | escape }}">
	{% endif %}

	{% include 'social-meta-tags' %}

	<link rel="canonical" href="{{ canonical_url }}">

	{{ 'foundation.min.css' | asset_url | stylesheet_tag }}
	{{ 'app.scss.css' | asset_url | stylesheet_tag }}

	<!-- Head hook for plugins -->
	{{ content_for_header }}
	<!-- /Head hook for plugins -->

	{% comment %}
		If you store has customer accounts disabled, you can remove shopify_common.js:
	{% endcomment %}
	{% if template contains 'customers' %}
		{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
	{% endif %}

</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >

	{% include 'page-header' %}

	<header class="site-header" role="banner">

		<div class="columns row">

			{% if template == 'index' %}
				<h1 itemscope itemtype="http://schema.org/Organization">
			{% else %}
				<div class="h1" itemscope itemtype="http://schema.org/Organization">
			{% endif %}
				{% if settings.logo_use_image %}
					<a href="/" class="logo" itemprop="url">
						<img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">
					</a>
				{% else %}
					<a href="/" itemprop="url">{{ shop.name }}</a>
				{% endif %}
			{% if template == 'index' %}
				</h1>
			{% else %}
				</div>
			{% endif %}
			{% if settings.header_message != blank %}
				<p class="header-message">
					{{ settings.header_message }}
				</p>
			{% endif %}
		</div>

		{% include 'site-nav' %}

	</header>

	<main class="site-main" role="main">
		{{ content_for_layout }}
	</main>

	<footer class="site-footer row text-center" role="contentinfo">

		<hr class="hr--small hr--clear">

		{% if settings.footer_quicklinks_enable %}
			<div class="columns quicklinks">
				{% if settings.footer_quicklinks_title_enable %}
					<h4>{{ 'layout.footer.linklist_title' | t }}</h4>
				{% endif %}
				<ul>
					{% for link in linklists[settings.footer_quicklinks_linklist].links %}
						<li><a href="{{ link.url }}">{{ link.title }}</a></li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}

		{% if settings.footer_social_enable %}
			<div class="columns social-links">
				<h4>{{ 'layout.footer.social_title' | t }}</h4>
				{% include 'social-links' %}
			</div>
		{% endif %}

		{% if settings.footer_contact_enable %}
			<div class="columns contact">
				<h4>{{ 'layout.footer.contact_title' | t }}</h4>
				<div class="rte">{{ settings.footer_contact_text }}</div>
			</div>
		{% endif %}

		{% if settings.footer_newsletter_enable %}
			<div class="columns newsletter">
				<h4>{{ 'layout.footer.newsletter_title' | t }}</h4>
				<p>{{ 'layout.footer.newsletter_caption' | t }}</p>
				{% include 'newsletter-form' %}
			</div>
		{% endif %}

		{% if settings.footer_show_methods_of_payment %}
			{% unless shop.enabled_payment_types == empty %}
			<div class="columns">
				<ul class="inline-list payment-icons">
					{% for type in shop.enabled_payment_types %}
						<li>
							<img src="{{ type | payment_type_img_url }}">
						</li>
					{% endfor %}
				</ul>
			</div>
			{% endunless %}
		{% endif %}

		<div class="columns">
			{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}. {{ powered_by_link }}
		</div>

	</footer>

	{{ 'jquery.min.js' | asset_url | script_tag }}
	{{ 'what-input.min.js' | asset_url | script_tag }}
	{{ 'foundation.min.js' | asset_url | script_tag }}
	{{ 'app.js' | asset_url | script_tag }}

	{% for i in (1..4) %}
		{% capture home_section %}home_section_{{ i }}{% endcapture %}
		{% if settings[home_section] == 'slider' %}
			{% assign slider_home_enable = true %}
		{% endif %}
	{% endfor %}

	{% if slider_home_enable %}
		{{ 'slick.min.js' | asset_url | script_tag }}
	{% endif %}

	{{ 'fastclick.min.js' | asset_url | script_tag }}

	{% if template contains 'product' %}
		{% if settings.product_image_zoom_type == 'zoom-in' %}
			{{ 'jquery.zoom.min.js' | asset_url | script_tag }}
		{% elsif settings.product_image_zoom_type == 'lightbox'	%}
			{{ 'magnific-popup.min.js' | asset_url | script_tag }}
		{% endif %}
	{% endif %}

	{% if template contains 'article' or template contains 'product' %}
		{% if settings.social_sharing_blog or settings.social_sharing_products %}
			{{ 'social-buttons.js' | asset_url | script_tag }}
		{% endif %}
	{% endif %}

</body>
</html>
