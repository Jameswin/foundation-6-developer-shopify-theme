<!-- old snippets/mobile-nav.liquid -->
<ul id="MobileNav" class="mobile-nav large--hide">
	
	{% for link in linklists.main-menu.links %}
	{% assign child_list_handle = link.title | handleize %}
	<li class="mobile-nav__link" aria-haspopup="true">
		{% if linklists[child_list_handle].links != blank %}
			<a href="{{ link.url }}" class="mobile-nav__sublist-trigger">
				{{ link.title }}
				{% include 'mobile-nav-icons' %}
			</a>
			<ul class="mobile-nav__sublist">	
				{% for link in linklists[child_list_handle].links %}
					<li class="mobile-nav__sublist-link">
						<a href="{{ link.url }}">{{ link.title }}</a>
					</li>
				{% endfor %}
			</ul>
		{% else %}
			<a href="{{ link.url }}" class="mobile-nav">
				{{ link.title }}
			</a>
		{% endif %}
	</li>
	{% endfor %}

	{% if shop.customer_accounts_enabled %}
		{% if customer %}
			<li class="mobile-nav__link">
				<a href="/account">{{ 'layout.customer.account' | t }}</a>
			</li>
			<li class="mobile-nav__link">
				{{ 'layout.customer.log_out' | t | customer_logout_link }}
			</li>
		{% else %}
			<li class="mobile-nav__link">
				{{ 'layout.customer.log_in' | t | customer_login_link }}
			</li>
			{% if shop.customer_accounts_optional %}
				<li class="mobile-nav__link">
					{{ 'layout.customer.create_account' | t | customer_register_link }}
				</li>
			{% endif %}
		{% endif %}
	{% endif %}
	
	{% if settings.header_search_enable %}
	<li class="mobile-nav__link">
		<div class="page-header__module page-header__search">
				{% include 'search-bar' with 'header' %}
		</div>
	</li>
	{% endif %}
	
</ul>
<!-- end snippets/left-navigation.liquid -->