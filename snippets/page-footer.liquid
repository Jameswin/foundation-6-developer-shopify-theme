<!-- snippets/page-footer.liquid -->
<footer class="site-footer row text-center" role="contentinfo">

	<hr class="hr--small hr--clear">

	{% if settings.footer_quicklinks_enable %}
		<div class="columns quicklinks">
			{% if settings.footer_quicklinks_title_enable %}
				<h4>{{ 'layout.footer.linklist_title' | t }}</h4>
			{% endif %}
			<ul>
				{% for link in linklists[settings.footer_quicklinks_linklist].links %}
					<li><a href="{{ link.url }}">{{ link.title }}</a></li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}

	{% if settings.footer_social_enable %}
		<div class="columns social-links">
			<h4>{{ 'layout.footer.social_title' | t }}</h4>
			{% include 'social-links' %}
		</div>
	{% endif %}

	{% if settings.footer_contact_enable %}
		<div class="columns contact">
			<h4>{{ 'layout.footer.contact_title' | t }}</h4>
			<div class="rte">{{ settings.footer_contact_text }}</div>
		</div>
	{% endif %}

	{% if settings.footer_newsletter_enable %}
		<div class="columns newsletter">
			<h4>{{ 'layout.footer.newsletter_title' | t }}</h4>
			<p>{{ 'layout.footer.newsletter_caption' | t }}</p>
			{% include 'newsletter-form' %}
		</div>
	{% endif %}

	{% if settings.footer_show_methods_of_payment %}
		{% unless shop.enabled_payment_types == empty %}
		<div class="columns">
			<ul class="inline-list payment-icons">
				{% for type in shop.enabled_payment_types %}
					<li>
						<img src="{{ type | payment_type_img_url }}">
					</li>
				{% endfor %}
			</ul>
		</div>
		{% endunless %}
	{% endif %}

	<div class="columns">
		{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}. {{ powered_by_link }}
	</div>

</footer>
<!-- end snippets/page-footer.liquid -->