<!-- snippets/html-head.liquid -->
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width,initial-scale=1">

{% if settings.favicon_enable %}
<link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
{% endif %}

<title>{{ page_title }}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

{% if page_description %}
<meta name="description" content="{{ page_description | escape }}">
{% endif %}

{% include 'social-meta-tags' %}

<link rel="canonical" href="{{ canonical_url }}">

{{ 'foundation.min.css' | asset_url | stylesheet_tag }}
{{ 'app.scss.css' | asset_url | stylesheet_tag }}

{% comment %}
	If you store has customer accounts disabled, you can remove shopify_common.js:
{% endcomment %}
{% if template contains 'customers' %}
	{{ 'shopify_common.js' | shopify_asset_url | script_tag }}
{% endif %}
