/* Spacing */

$tiny-spacing: 0.2rem;
$small-spacing: 1rem;
$medium-spacing: 2rem;
$large-spacing: 4rem;
$huge-spacing: 10rem;

$minimum-product-button-height: 8rem;

.small-margin {
	margin: $small-spacing;
}

.medium-margin {
	margin: $medium-spacing;
}

.menu-icon {
	margin: $small-spacing;
	margin-right: 0;
}

footer h4 {
	margin-bottom: 0;
}

footer>div {
	margin-bottom: $small-spacing;
}

/* An unsavory solution to align lists properly */
.rte li {
	margin-left: $small-spacing;
}

.product-showcase-item .badge {
	margin: $tiny-spacing;
}

.product-showcase-item .product-title,
.product-showcase-item .product-vendor,
.product-showcase-item .product-price {
	line-height: 120%;
	display: block;
}

.product-showcase-item .product-vendor,
.product-showcase-item .product-price {
	margin-top: 0.5rem;
}

.product-showcase-item button {
	min-height: $minimum-product-button-height;
}


/* Colors */

$fg-color-primary: #2199e8;
$fg-color-secondary: #1585cf;

.menu-icon:after {
	background-color: $fg-color-primary;
	box-shadow: 0 7px 0 $fg-color-primary, 0 14px 0 $fg-color-primary;
}

.menu-icon:hover::after {
	background-color: $fg-color-secondary;
	box-shadow: 0 7px 0 $fg-color-secondary, 0 14px 0 $fg-color-secondary;
}


/* Alignment */

/* Overriding Foundation's last child float right styles which cause columns to separate if an odd number of columns exist. This looks very odd in the case of products not lining up next to one another. I'm not sure why they made this implementation decision; I can't think of a case where I would want this. */
.column:last-child:not(:first-child), .columns:last-child:not(:first-child) {
	float: left;
}

.product-showcase-item {
	position: relative;
}

.product-showcase-item .badge {
	position: absolute;
}

.product-showcase .product-showcase-item a {
	text-align: center;
}


/* Styling */

.product-compare-price {
	text-decoration: line-through;
}

.product-showcase-item label {
	cursor: pointer;
}