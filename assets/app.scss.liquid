/* Spacing */

$tiny-spacing: 0.2rem;
$small-spacing: 1rem;
$medium-spacing: 2rem;
$large-spacing: 4rem;
$huge-spacing: 10rem;

.small-margin {
	margin: $small-spacing;
}

.medium-margin {
	margin: $medium-spacing;
}

.menu-icon {
	margin: $small-spacing;
	margin-right: 0;
}

footer h4 {
	margin-bottom: 0;
}

footer>div {
	margin-bottom: $small-spacing;
}

/* An unsavory solution to align lists properly */
.rte li {
	margin-left: $small-spacing;
}


/* Colors */

$fg-color-primary: #2199e8;
$fg-color-secondary: #1585cf;

.menu-icon:after {
	background-color: $fg-color-primary;
	box-shadow: 0 7px 0 $fg-color-primary, 0 14px 0 $fg-color-primary;
}

.menu-icon:hover::after {
	background-color: $fg-color-secondary;
	box-shadow: 0 7px 0 $fg-color-secondary, 0 14px 0 $fg-color-secondary;
}